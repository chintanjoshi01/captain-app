<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Captain" parent="Theme.MaterialComponents.DayNight.NoActionBar" />
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/colorSecondary</item>
        <item name="subtitleTextColor">@color/colorSecondary</item>
        <item name="textInputStyle">@style/MyCustomTextInputStyle</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
    <style name="tabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="popup_bg" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/colorSecondaryVariant</item>
        <item name="android:itemBackground">@color/light_pink</item>
    </style>

    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">@drawable/menu_item_background</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="BottomSheetPost" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/layout_shape_rectangle_top_corners</item>
    </style>
    <style name="BaseBottomSheetPostDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetPost</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>

        <item name="android:windowSoftInputMode">adjustUnspecified</item>
    </style>

    <style name="BottomSheetPostDialogTheme" parent="BaseBottomSheetPostDialog" />

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <!--        <item name="android:windowAnimationStyle">@style/PauseDialogAnimationFade</item>-->

    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="MyCustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="fontFamily">@font/nunito_regular</item>

        <!-- Correct: Material attribute -->
        <item name="hintTextColor">@color/colorSecondary</item>

        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="boxStrokeErrorColor">@color/colorPrimary</item>
    </style>

    <style name="textInput" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorSecondary</item>

        <!-- Correct: Android attribute -->
        <item name="android:textColorHint">@color/colorSecondaryVariant</item>

        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>



    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@color/blackText5</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CheckedChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ThemeOverlay.SearchView" parent="">
        <!-- Text color -->
        <item name="android:editTextColor">@color/colorSecondary</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/colorSecondary</item>
    </style>

    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/top_bottom</item>
        <item name="android:windowExitAnimation">@anim/bottom_top</item>
    </style>
    <style name="AppThemeTransparent" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:background">@drawable/chip_selector</item>
        <item name="android:textColor">@color/blackText5</item>
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
    </style>


    <style name="ShapeAppearance.Chip.Round" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="Widget.App.Chip_Round" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconTint">@color/colorPrimary</item>
        <item name="chipBackgroundColor">@color/chip_background_selector_red</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/chip_background_color_selecto_whiter</item>
        <item name="chipStrokeColor">@color/chip_background_color_selector</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Widget.App.Chip_Round_New" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconTint">@color/colorPrimary</item>
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/chip_background_color_selector</item>
        <item name="chipStrokeColor">@color/chip_background_color_selector</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Chip.Round</item>
    </style>

    <!-- This is an example of what you might see. The actual code is more complex. -->
    <style name="Theme.AppCompat.Dialog" parent="Base.Theme.AppCompat.Dialog">
        <!-- Various properties are set here -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        ...
    </style>

    <style name="App.Dialog.Modal" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- A style for our centered, modal alert dialogs -->
    <style name="App.Dialog.Alert" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <!-- You can customize width, background, etc. here -->
        <item name="android:windowBackground">@drawable/bg_dialog_modal_rounded</item>
    </style>
</resources>