<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Color (Dark Grey) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_delete" /> <!-- Dark background color -->
        </shape>
    </item>

    <!-- Red Accent Bar on the Left -->
    <item
        android:width="4dp"
        android:gravity="end">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" /> <!-- Your primary red color -->
        </shape>
    </item>

</layer-list>