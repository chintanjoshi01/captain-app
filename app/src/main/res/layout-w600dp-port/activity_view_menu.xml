<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical">

    <!-- Toolbar remains the same -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_white"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:titleTextColor="@color/colorSecondary" />

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/toolbar_dropshadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="10">

        <!-- PANE 1: Categories (Far Left) -->
        <LinearLayout
            android:id="@+id/category_pane"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:background="@color/colorSecondary"
            android:orientation="vertical">

            <!-- "All Items" Header -->
            <TextView
                android:id="@+id/tv_all_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/nunito_bold"
                android:padding="16dp"
                android:text="Category"
                android:textColor="@color/color_white"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_categories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_category_tablet" />

        </LinearLayout>

        <!-- PANE 2: Menu Items (Middle) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.3"
            android:background="@color/color_white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/cons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/edt_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_style"
                    android:theme="@style/ThemeOverlay.SearchView"
                    app:iconifiedByDefault="false"
                    app:queryHint="Search Item" />

            </RelativeLayout>

            <!-- Your existing RecyclerView for items -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_viewkot_items" />
        </LinearLayout>


        <!-- PANE 3: KOT Summary (Right) -->
        <LinearLayout
            android:id="@+id/kot_summary_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="3.5"
            android:background="@color/color_white"
            android:orientation="vertical">

            <!-- KOT Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvKotAndName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/nunito_bold"
                    android:text="KOT 1 (K)"
                    android:textColor="@color/colorSecondary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_kot_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/blackText2"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_service_time"
                    app:drawableTint="@color/blackText2"
                    tools:text="03:12 PM (20 min)" />
            </RelativeLayout>

            <!-- Column Titles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Items"
                    android:textColor="@color/blackText2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="center"
                    android:minWidth="90dp"
                    android:text="Qty"
                    android:textColor="@color/blackText2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="end"
                    android:minWidth="80dp"
                    android:text="Amount"
                    android:textColor="@color/blackText2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_kot_summary"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_kot_summary_tablet" />

            <!-- Submit Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit_kot_tablet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/btn_square_shape_save"
                android:fontFamily="@font/nunito_bold"
                android:padding="12dp"
                android:text="Submit KOT"
                android:textColor="@color/color_white"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Hide mobile-specific views in tablet mode -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>