<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp"
    android:gravity="center_vertical"
    android:background="@android:color/white">

    <!-- Item Name and Instructions -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upma"
            android:textColor="@color/colorSecondary"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_sp_inst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spicy, Less oil"
            android:textColor="@color/blackText2"
            android:textSize="12sp"
            android:visibility="gone"/> <!-- Show programmatically -->
    </LinearLayout>

    <!-- Quantity Counter -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginEnd="15dp"
        android:minWidth="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lin_min"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_minus"
            android:background="@drawable/bg_quantity_button"
            android:padding="6dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="1"
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/lin_add"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_add"
            android:background="@drawable/bg_quantity_button"
            android:padding="6dp"/>
    </LinearLayout>

    <!-- Total Amount -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:gravity="end"
        android:text="170.00"
        android:textColor="@color/colorSecondary"
        android:textSize="16sp"/>

</LinearLayout>