<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_status_padding">

    <!-- Header -->
    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/colorSecondary"
        android:textSize="@dimen/dialog_status_item_name_text_size"
        app:layout_constraintEnd_toStartOf="@+id/btn_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Masala Dosa" />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_regular"
        android:textColor="@color/colorSecondary"
        android:textSize="@dimen/dialog_status_quantity_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_name"
        tools:text="x1" />

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_close_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorSecondary" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_quantity" />

    <!-- Status Line -->
    <ImageView
        android:id="@+id/iv_status_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/dialog_status_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_quantity"
        tools:src="@drawable/ic_check_circle" />

    <TextView
        android:id="@+id/tv_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="@dimen/dialog_status_status_text_size"
        app:layout_constraintBottom_toBottomOf="@id/iv_status_icon"
        app:layout_constraintStart_toEndOf="@id/iv_status_icon"
        app:layout_constraintTop_toTopOf="@id/iv_status_icon"
        tools:text="Delivered"
        tools:textColor="@color/blackText1" />

    <!-- Special Instructions -->
    <TextView
        android:id="@+id/label_special_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_status_padding_large"
        android:fontFamily="@font/nunito_regular"
        android:text="@string/special_instructions"
        android:textColor="@color/blackText1"
        android:textSize="@dimen/dialog_status_label_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_status_icon" />

    <TextView
        android:id="@+id/tv_instructions_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_grey_border_white"
        android:backgroundTint="@color/info_card_background"
        android:fontFamily="@font/nunito_semibold"
        android:padding="@dimen/dialog_status_info_card_padding"
        android:textColor="@color/colorSecondary"
        android:textSize="@dimen/dialog_status_content_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_special_instructions"
        tools:text="Extra Spicy, less oil" />

    <!-- Info Cards -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_service_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_status_padding_large"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/info_card_background"
        app:cardCornerRadius="@dimen/dialog_status_info_card_corner_radius"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@+id/card_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_instructions_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:src="@drawable/ic_stop_watch" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="@dimen/dialog_status_info_card_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="@string/service_time"
                    android:textSize="@dimen/dialog_status_info_card_title_size" />

                <TextView
                    android:id="@+id/tv_service_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/colorSecondary"
                    android:textSize="@dimen/dialog_status_info_card_value_size"
                    tools:text="15 Min" />
            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/info_card_background"
        app:cardCornerRadius="@dimen/dialog_status_info_card_corner_radius"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_service_time"
        app:layout_constraintTop_toTopOf="@id/card_service_time">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_duration_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:src="@drawable/ic_send_clock" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="@dimen/dialog_status_info_card_padding">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="@string/duration"
                    android:textSize="@dimen/dialog_status_info_card_title_size" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="@dimen/dialog_status_info_card_value_size"
                    tools:text="8 Min"
                    tools:textColor="@color/blackText1" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>