<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="12dp"
    android:paddingTop="10dp"
    android:paddingEnd="12dp"
    android:paddingBottom="10dp">

    <!-- Item Name and Notes -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Veg/Non-Veg symbol can be added here if needed -->
        <!-- <ImageView ... /> -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/colorSecondary"
                android:textSize="15sp"
                tools:text="Dal" />

            <TextView
                android:id="@+id/tv_item_price_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/blackText2"
                android:textSize="12sp"
                tools:text="170.00" />
        </LinearLayout>
    </LinearLayout>

    <!-- Quantity Controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minWidth="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_decrease"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_quantity_button"
            android:padding="6dp"
            app:srcCompat="@drawable/ic_minus_sign"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:minWidth="20dp"
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            tools:text="3" />

        <ImageView
            android:id="@+id/btn_increase"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_quantity_button"
            android:padding="6dp"
            app:srcCompat="@drawable/ic_add"
            app:tint="@color/colorPrimary" />
    </LinearLayout>

    <!-- Total Amount -->
    <TextView
        android:id="@+id/tv_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="end"
        android:minWidth="80dp"
        android:textColor="@color/colorSecondary"
        android:textSize="15sp"
        tools:text="360.00" />
</LinearLayout>