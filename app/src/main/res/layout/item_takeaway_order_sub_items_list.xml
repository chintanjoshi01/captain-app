<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/txt_qty"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_deleteKotItem"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="@dimen/_1sdp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_check_circle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_section_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:lines="1"
                    android:text="ITEMS "
                    android:textColor="@color/colorSecondary"
                    android:textSize="@dimen/kot_item_name_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_sp_inst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:text="SP IN"
                    android:textColor="@color/colorSecondaryVariant"
                    android:textSize="@dimen/kot_item_details_size" />
            </LinearLayout>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_qty"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:buttonTint="@color/colorPrimary"
            android:fontFamily="@font/nunito_regular"
            android:layoutDirection="rtl" />

        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/lin"
            android:alpha="0.5"
            android:background="@color/colorSecondary" />
    </RelativeLayout>
</LinearLayout>