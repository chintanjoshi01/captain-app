<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Item Name and Notes -->
    <LinearLayout
        android:id="@+id/ll_item_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/ll_quantity_controls"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/colorSecondary"
            android:textSize="14sp"
            tools:text="Dosa" />

        <TextView
            android:id="@+id/tv_item_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/blackText2"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="Spicy, Less Oil"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- Total Amount for the item -->
    <TextView
        android:id="@+id/tv_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="end"
        android:minWidth="70dp"
        android:textColor="@color/colorSecondary"
        android:textSize="14sp"
        tools:text="129.00" />


    <!-- Quantity Controls (Minus, Qty, Plus) -->
    <LinearLayout
        android:id="@+id/ll_quantity_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/tv_item_amount"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_decrease"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_minus"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/nunito_bold"
            android:minWidth="20dp"
            android:gravity="center"
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            tools:text="1" />

        <ImageView
            android:id="@+id/btn_increase"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_add"
            app:tint="@color/colorPrimary" />

    </LinearLayout>

</RelativeLayout>