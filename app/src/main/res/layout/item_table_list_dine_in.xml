<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        app:cardBackgroundColor="@color/color_white"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/img_delete"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_cust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_dine"
                android:visibility="gone"
                android:layout_alignBottom="@+id/img_dine"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_toEndOf="@+id/img_dine"
                android:orientation="vertical">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/cust_order"
                    android:layout_alignTop="@+id/cust_order"
                    android:layout_alignEnd="@+id/cust_order"
                    android:layout_alignBottom="@+id/cust_order"
                    android:background="@drawable/shape_red"
                    android:backgroundTint="@color/colorPrimary" />


                <TextView
                    android:id="@+id/cust_order"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lines="1"
                    android:text="5"
                    android:minEms="2"
                    android:maxEms="2"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_blink"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:visibility="gone"
                android:layout_above="@+id/img_dine"
                android:layout_centerInParent="true"
                android:layout_marginBottom="-6dp"
                android:src="@drawable/ic_blue_circle" />

            <ImageView
                android:id="@+id/img_dine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_dine_in"
                app:tint="@color/color_pendingItem_LightRed" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_dine"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
